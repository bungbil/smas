<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="billy.backend.model.BonusTransport" table="bonus_transport">

		<id name="id" type="long">
			<column name="bonus_transport_id" />
			<generator class="sequence">
				<param name="sequence">bonus_transport_seq</param>
			</generator>
		</id>

		<version name="version" column="VERSION" type="integer" />

		<property name="deskripsiBonusTransport" type="string">
			<column name="deskripsi_bonus_transport" length="254" not-null="true" unique="true" />
		</property>
		<many-to-one name="jobType" class="billy.backend.model.JobType"
			fetch="select" lazy="false">
			<column name="job_type_id" not-null="true" />
		</many-to-one>
		
		<property name="multipleUnit" type="boolean">
			<column name="multiple_per_unit" />
		</property>
		<property name="startRangeUnit" type="integer">
			<column name="start_range_unit" />
		</property>
		<property name="endRangeUnit" type="integer">
			<column name="end_range_unit" />
		</property>
		<property name="honor" type="big_decimal">
			<column name="honor" precision="12" />
		</property>
		<property name="or" type="big_decimal">
			<column name="bonus_or" precision="12" />
		</property>		
		<property name="transport" type="big_decimal">
			<column name="transport" precision="12" />
		</property>
		<property name="bonus" type="big_decimal">
			<column name="bonus" precision="12" />
		</property>
		<property name="statusPusat" type="boolean">
			<column name="status_pusat" />
		</property>
		<property name="statusDaerah" type="boolean">
			<column name="status_daerah" />
		</property>
		<property name="lastUpdate" type="timestamp">
			<column name="last_update" length="29" />
		</property>	
		<property name="updatedBy" type="string">
			<column name="updated_by" length="50" />
		</property>	
		
	</class>
</hibernate-mapping>
