<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping>

	<class name="billy.backend.model.Piutang" table="Piutang">

		<id name="id" type="long">
			<column name="piutang_id" />
			<generator class="sequence">
				<param name="sequence">piutang_seq</param>
			</generator>
		</id>

		<version name="version" column="VERSION" type="integer" />
		
		<many-to-one name="penjualan" class="billy.backend.model.Penjualan"
			fetch="select" lazy="false">
			<column name="penjualan_id" not-null="true" />
		</many-to-one>
		<property name="noKuitansi" type="string">
			<column name="no_kuitansi" length="50" not-null="true" />
		</property>
		<property name="noFaktur" type="string">
			<column name="no_faktur" length="50" not-null="true" />
		</property>
		<property name="pembayaranKe" type="integer">
			<column name="pembayaran_ke" />
		</property>
		<property name="tglPembayaran" type="date">
			<column name="tgl_pembayaran"/>
		</property>
  		<many-to-one name="status" class="billy.backend.model.Status"
			fetch="select" lazy="false">
			<column name="status_id" not-null="false" />
		</many-to-one>
   		<property name="nilaiTagihan" type="big_decimal">
			<column name="nilai_tagihan" precision="12" />
		</property>	
   		<property name="pembayaran" type="big_decimal">
			<column name="pembayaran" precision="12" />
		</property>	   		
   		<property name="tglJatuhTempo" type="date">
			<column name="tgl_jatuh_tempo"/>
		</property>
   		<many-to-one name="kolektor" class="billy.backend.model.Karyawan"
			fetch="select" lazy="false">
			<column name="kolektor_id" not-null="false" />
		</many-to-one>
   		<property name="keterangan" type="string">
			<column name="keterangan" length="300" />
		</property>
		<property name="needApproval" type="boolean">
			<column name="need_approval"  />
		</property>
		<property name="reasonApproval" type="string">
			<column name="reason_approval" length="254" />
		</property>
		<property name="approvedRemark" type="string">
			<column name="approved_remark" length="254" />
		</property>
		<property name="approvedBy" type="string">
			<column name="approved_by" length="50" />
		</property>			
		<property name="fullPayment" type="boolean">
			<column name="full_payment"  />
		</property>
		<property name="tglBawaKolektor" type="date">
			<column name="tgl_bawa"/>
		</property>
		<property name="diskon" type="big_decimal">
			<column name="diskon" precision="12" />
		</property>
		<property name="kekuranganBayar" type="big_decimal">
			<column name="kekurangan_bayar" precision="12" />
		</property>
		<many-to-one name="statusFinal" class="billy.backend.model.Status"
			fetch="select" lazy="false">
			<column name="status_final_id" not-null="false" />
		</many-to-one>
		<property name="aktif" type="boolean">
			<column name="aktif"  />
		</property>
		<property name="lastUpdate" type="timestamp">
			<column name="last_update" length="29" />
		</property>	
		<property name="updatedBy" type="string">
			<column name="updated_by" length="50" />
		</property>	
		
		
		<property name="masalah" type="boolean">
			<column name="masalah"  />
		</property>
		<property name="namaPelanggan" type="string">
			<column name="nama_pelanggan" length="200" />
		</property>
		<property name="telepon" type="string">
			<column name="telepon" length="100" />
		</property>
		<property name="alamat" type="string">
			<column name="alamat" length="500" />
		</property>
		<property name="alamat2" type="string">
			<column name="alamat2" length="255" />
		</property>
		<property name="alamat3" type="string">
			<column name="alamat3" length="255" />
		</property>
		
		<many-to-one name="tukarBarang" class="billy.backend.model.Barang"
			fetch="select" lazy="false">
			<column name="tukar_barang_id" not-null="false" />
		</many-to-one>		
		<property name="tukarHarga" type="big_decimal">
			<column name="tukar_harga" precision="12" />
		</property>	
		
		<many-to-one name="tukarOldBarang" class="billy.backend.model.Barang"
			fetch="select" lazy="false">
			<column name="tukar_old_barang_id" not-null="false" />
		</many-to-one>		
		<property name="tukarOldHarga" type="big_decimal">
			<column name="tukar_old_harga" precision="12" />
		</property>	
	</class>
</hibernate-mapping>
